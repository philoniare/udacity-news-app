<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/news_title_padding_bottom"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/article_thumbnail"
        android:paddingRight="@dimen/news_thumbnail_padding_right"
        android:layout_width="@dimen/article_image_width"
        android:scaleType="fitCenter"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/news_body_size"
            android:id="@+id/article_section_name" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/news_article_padding_bottom"
            android:id="@+id/article_title"
            android:textStyle="bold"
            android:textSize="@dimen/news_title_size" />
    </LinearLayout>
</LinearLayout>